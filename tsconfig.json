{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2016"
    ],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "public"
  ],
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "include": [
    "src"
  ]
}