{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/ging/issues",
  "description": "GING Is Not Gantt, but kind of :)",
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "esbuild": "^0.14",
    "eslint": "8.15",
    "eslint-plugin-html": "6",
    "eslint-plugin-unicorn": "42",
    "npm-run-all": "4",
    "repo-check": "1.24",
    "servor": "4",
    "shuutils": "^5.4",
    "tailwindcss": "3",
    "tsm": "^2.2",
    "typescript": "^4.6"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/ging",
  "keywords": [
    "webapp",
    "gantt",
    "plan"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/ging",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/ging.git"
  },
  "scripts": {
    "build": "run-s build:css \"build:js --minify\"",
    "build:css": "tailwindcss -i src/styles.css -o public/styles.min.css --minify",
    "build:js": "esbuild src/index.ts --bundle --platform=node --outfile=public/main.js --target=es2020 --define:global=window",
    "check": "repo-check",
    "ci": "run-s build lint check test",
    "dev": "run-p dev:* serve",
    "dev:css": "npm run build:css -- --watch",
    "dev:js": "npm run build:js -- --watch",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts,.html .",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --browse --reload",
    "test": "echo nothing to test yet"
  },
  "version": "0.0.0"
}
